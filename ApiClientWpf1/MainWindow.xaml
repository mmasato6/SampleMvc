<Window x:Class="ApiClientWpf1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ApiClientWpf1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="btnGet" Content="Get" HorizontalAlignment="Left" Margin="10,12,0,0"  VerticalAlignment="Top" Width="75" Height="30" Click="btnGet_Click" />
        <Button x:Name="btnGetId" Content="GetId" HorizontalAlignment="Left" Margin="10,54,0,0"  VerticalAlignment="Top" Width="75" Height="30"/>
        <Button x:Name="btnPost" Content="Post" HorizontalAlignment="Left" Margin="10,95,0,0"  VerticalAlignment="Top" Width="75" Height="30" Click="btnPost_Click"/>
        <Button x:Name="btnPutId" Content="PutId" HorizontalAlignment="Left" Margin="10,135,0,0"  VerticalAlignment="Top" Width="75" Height="30"/>
        <TextBox x:Name="textResult" HorizontalAlignment="Left" Height="167" Margin="90,54,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="396" />
    </Grid>
</Window>
